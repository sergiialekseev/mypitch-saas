rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function ownsResource() {
      return isSignedIn() && resource.data.recruiterId == request.auth.uid;
    }

    function ownsRequest() {
      return isSignedIn() && request.resource.data.recruiterId == request.auth.uid;
    }

    match /jobs/{docId} {
      allow create: if ownsRequest();
      allow read, update, delete: if ownsResource();
    }

    match /candidates/{docId} {
      allow create: if ownsRequest();
      allow read, update, delete: if ownsResource();
    }

    match /invites/{docId} {
      allow create: if ownsRequest();
      allow read, update, delete: if ownsResource();
    }

    match /sessions/{docId} {
      allow create: if ownsRequest();
      allow read, update, delete: if ownsResource();
    }

    match /transcripts/{docId} {
      allow create: if ownsRequest();
      allow read, update, delete: if ownsResource();
    }

    match /reports/{docId} {
      allow create: if ownsRequest();
      allow read, update, delete: if ownsResource();
    }
  }
}
